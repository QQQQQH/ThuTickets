<view class="container">
  <view>
    <image class="poster" src="{{eventInfo.imgPath}}" mode='aspectFit'>"</image>
  </view>
  <view class="summary-session">
    <view class="movie-summary">
      <text class="name">{{eventInfo.title}}</text>
      <text class="subtype">活动开始时间：{{eventInfo.date}} {{eventInfo.time}}</text>
      <text class="subtype">抢票开始时间：{{eventInfo.date}} {{eventInfo.time}}</text>
    </view>
  </view>
  
  <view class="desc-session">
    <text class="title">简介</text>
    <block>
      <view class="desc-wrapper">
        <text class="desc-content {{ellipsis?'ellipsis':'unellipsis'}}">{{eventInfo.text}}</text>
          <text class="extension" bindtap="ellipsis">展开</text>
      </view>
    </block>
  </view>
      <button type="defalut" bindtap='is_touch' class='goodbutton' hover-class="hover">抢票</button>
</view>