@import '/pages/template/imgTmp.wxss';
page{
  height:100%;
}
.slide-image{
  width: 100%;
    display:flex;
  flex-direction: column;
}

.root{
  display:flex;
  flex-direction: column;
  height:33%;
  background-color:#f0f0f0; 
}


.searchtab{
height: 50px;
  flex-direction: row;
  background-color: rgb(230, 36, 36);
}
.searchinput{
  background-color: white;
  width:500rpx;
  position:absolute;
  top:15rpx;
  left:30rpx;
    height:30px;
    border-radius: 98rpx;
}
.searchbutton{
  height:35px;
  width:100px;
  position: absolute;
  right: 0rpx;
  top:10rpx;
  border-radius: 98rpx;
}
.todaycomment{
 display: flex;

  align-items: center;

  justify-content: center;
    background-color: white;
}


view.text {
    display: flex;
    align-items: center;
    position: relative;
    padding: 15rpx 20rpx 18rpx;
    font-size: 28rpx;
    color: #656565;
}

view.text:before {
    position: absolute;
    display: block;
    content: ' ';
    left: -5rpx;
    width: 2rpx;
    height: 100%;
    background-color: #09bb07;
}

.line_flag {
    width: 5rpx;
    height: 30rpx;
    display: inline-block;
    background-color: #09bb07;
}

view.text text {
    margin-left: 10rpx;
    line-height: 18rpx;
}

