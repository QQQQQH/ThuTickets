<!--index.wxml-->
<import src="/pages/template/imgTmp.wxml" />
<view class="root">
  <view class="searchtab">
    <input class="searchinput" placeholder="搜你想要的" />
    <button class="searchbutton">搜索</button>
  </view>

  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{imgPath}}" wx:key="unique">
      <swiper-item>
        <image src="{{item}}" class="slide-image" />
      </swiper-item>
    </block>
  </swiper>
</view>
  <text class='todaycomment'>今日推荐</text>

<block wx:for='{{eventList}}' wx:key='{{index}}'>
  <view>
    <template is='imgTmp' data='{{...item}}'/>
  </view>
</block>