<template name="eventCard">
  <navigator class='eventCard' url='/pages/detail/detail?id={{eventid}}&fromPage=eventList'>
    <image src='{{imgPath}}' mode='aspectFit' class='eventImg'></image>
    <view class='eventInfo'>
      <view class='eventTitle'>{{title}}</view>
      <view>
        活动时间：
        <text class="green">{{eventDate}} {{eventTime}}</text>
      </view>
      <view>
        抢票时间：
        <text class="green">{{purchaseDate}} {{purchaseTime}}</text>
      </view>
      <view>
        活动地点：
        <text class="green">{{location}}</text>
      </view>
    </view>
  </navigator>
</template>